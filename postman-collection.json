{
  "info": {
    "name": "MeowNocode API",
    "description": "MeowNocode 备忘录应用 API 接口集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "健康检查",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            },
            "description": "检查服务器运行状态"
          }
        }
      ]
    },
    {
      "name": "Memos 备忘录",
      "item": [
        {
          "name": "获取备忘录列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memos?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "页码"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "每页数量"
                }
              ]
            },
            "description": "获取备忘录列表，支持分页"
          }
        },
        {
          "name": "创建备忘录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"这是一条测试备忘录\",\n  \"tags\": [\"测试\", \"示例\"],\n  \"pinned\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/memos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos"]
            },
            "description": "创建新的备忘录"
          }
        },
        {
          "name": "获取单个备忘录",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memos/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "memo-1728123456789-abc123",
                  "description": "备忘录 ID"
                }
              ]
            },
            "description": "根据 ID 获取单个备忘录"
          }
        },
        {
          "name": "更新备忘录",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"更新后的内容\",\n  \"tags\": [\"更新\", \"测试\"],\n  \"pinned\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/memos/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "memo-1728123456789-abc123",
                  "description": "备忘录 ID"
                }
              ]
            },
            "description": "更新指定备忘录"
          }
        },
        {
          "name": "删除备忘录",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memos/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "memo-1728123456789-abc123",
                  "description": "备忘录 ID"
                }
              ]
            },
            "description": "删除指定备忘录"
          }
        },
        {
          "name": "获取归档备忘录",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/memos/archived?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "memos", "archived"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "页码"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "每页数量"
                }
              ]
            },
            "description": "获取归档的备忘录列表"
          }
        }
      ]
    },
    {
      "name": "Attachments 附件",
      "item": [
        {
          "name": "上传附件",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "要上传的文件"
                },
                {
                  "key": "memoId",
                  "value": "memo-1728123456789-abc123",
                  "type": "text",
                  "description": "关联的备忘录 ID（可选）"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/attachments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attachments"]
            },
            "description": "上传新附件"
          }
        },
        {
          "name": "获取附件",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/attachments/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attachments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "att-1728123456789-xyz789",
                  "description": "附件 ID"
                }
              ]
            },
            "description": "获取附件文件"
          }
        }
      ]
    },
    {
      "name": "Statistics 统计",
      "item": [
        {
          "name": "获取所有统计信息",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stats"]
            },
            "description": "获取所有统计信息"
          }
        },
        {
          "name": "获取数据库统计",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats?include=database",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stats"],
              "query": [
                {
                  "key": "include",
                  "value": "database"
                }
              ]
            },
            "description": "仅获取数据库统计信息"
          }
        },
        {
          "name": "获取标签统计",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats?include=tags",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stats"],
              "query": [
                {
                  "key": "include",
                  "value": "tags"
                }
              ]
            },
            "description": "仅获取标签统计信息"
          }
        }
      ]
    },
    {
      "name": "Auth 认证",
      "item": [
        {
          "name": "获取认证状态",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth-status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth-status"]
            },
            "description": "获取当前认证状态"
          }
        }
      ]
    },
    {
      "name": "Data Management 数据管理",
      "item": [
        {
          "name": "导出数据库",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/export/database",
              "host": ["{{baseUrl}}"],
              "path": ["api", "export", "database"]
            },
            "description": "导出整个数据库文件"
          }
        },
        {
          "name": "导入数据库",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "dbFile",
                  "type": "file",
                  "src": [],
                  "description": "SQLite 数据库文件"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/import/memos-db",
              "host": ["{{baseUrl}}"],
              "path": ["api", "import", "memos-db"]
            },
            "description": "导入数据库文件"
          }
        },
        {
          "name": "清除演示数据",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/clear-demo-data",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clear-demo-data"]
            },
            "description": "清除所有演示数据"
          }
        }
      ]
    }
  ]
}

